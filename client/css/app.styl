body
  margin: 0px
  background: #111;
  color: #CCC
  font-family: 'Source Sans Pro', sans-serif
  font-weight: 200
  font-size: 20px
  position: relative

html, body
  height: 100%
  overflow: hidden

a
  text-decoration: none

a:hover
  text-decoration: none

.modal
  color: #666
  text-align: center
  overflow-y: hidden
  .btn
    margin-right: 10px
  .img-circle
    width: 48px
    height: 48px

#homepage
  text-align: center
  .btn
    margin: 0px 10px
  .logo
    img
      width: 100px
      padding: 10px
    font-size: 16px
  .login
    p
      font-size: 70px
      line-height: 70px
      padding: 10px
      margin-bottom: 20px
  .about
    width: 60%
    margin: 0 auto
    margin-top: 50px
    font-size: 16px

#github
  position: fixed
  bottom: 10px
  text-align: center
  width: 100%
  font-size: 15px

#room
  height: 100%

  #streams
    position: relative
    z-index: 0
    float: right
    width: 60%
    height: 100%

    .local
      -webkit-transform: rotateY(-180deg)
      transform: rotateY(-180deg)

    .stream-view
      width: 50%
      float: left

      video
        width: 100%
        z-index: 1

      .screen_name
        position: absolute
        font-size: 16px
        margin: -35px 0px 0px 5px
        padding: 0px 10px
        background: #111
        opacity: 0.7
        border-radius: 15px

      #controls
        z-index: 2
        position: absolute
        font-size: 20px
        margin: -50px 0px 0px 10px
        opacity: 0.3

        padding: 4px 8px
        background: #333
        opacity: 0.3
        border-radius: 50px

        i
          cursor: pointer
          color: lightgreen
          padding: 0px 10px

        .muted
          color: lightcoral

      #controls:hover
        opacity: 1


  input[type='text']
    background: transparent
    color: white

  #chat
    position: relative
    width: 40%
    float: left
    height: 100%

    #chat-messages
      position: relative
      padding: 80px 50px 60px 95px
      height: 100%
      width: 100%
      overflow: scroll
      font-size: 18px
      ul
        padding: 0px
        list-style: none

      .chat-message
        .username
          text-transform: uppercase
          color: #2a6496

    #chat-input
      position: absolute
      bottom: 10px
      left: 100px
      padding: 0px 10px 0px 0px

#home, #profile
  position: relative
  min-width: 100%
  min-height: 100%
  width: 100%
  height: 100%

  .call
    display: none

  #placeholder
    text-align: center
    margin-top: 50px

#bgvideo
  position: absolute
  z-index: 1
  top: 0
  left: 0
  overflow: hidden
  width: 100%

  video
    object-fit: contain
    width: 100%
    -webkit-transform: rotateY(-180deg)
    -webkit-filter:blur(5px)
    transform: rotateY(-180deg)
    filter: blur(5px)

#wrapper
  position: absolute
  z-index: 20
  width: 100%
  height: 100%
  top: 0
  left: 0
  overflow: hidden

#background
  z-index: 0
  position: absolute
  width: 100%
  height: 100%
  top: 0
  left: 0
  background: #000
  opacity: 0.6


#container
  position: relative
  width: 100%
  height: 100%
  padding-top: 100px

#conversation
  display: none

.user
  text-align: center
  width: 150px
  float: left
  padding: 10px

#singleuser
  position: absolute
  top: 30%
  left: 50%
  width: 200px
  margin-left: -100px
  text-align: center

@media(max-width: 768px)
  #one-to-one
    #local
      bottom: 5px !important
      right: 5px !important
      max-width: 100px
      max-height: 100px
    #controls
      top: 5px !important
      right: 5px !important
      font-size: 15px !important
    #chat-input, #chat-messages
      display: none

#one-to-one
  #remote
    z-index: 1
    position: absolute
    width: 100%

  #local
    z-index: 2
    position: fixed
    bottom: 30px
    right: 30px
    max-width: 200px
    border: 2px solid #FFF
    border-radius: 2px
    -webkit-transform: rotateY(-180deg)
    transform: rotateY(-180deg)

  #controls
    z-index: 3
    position: absolute
    font-size: 22px
    top: 30px
    right: 30px

    padding: 7px 15px
    background: #333
    opacity: 0.3
    border-radius: 50px

    #hangup
      color: lightcoral
      margin-left: 15px

    i
      cursor: pointer
      color: lightgreen
      padding: 0px 10px

    #toggle-fullscreen
      color: lightblue

    .muted
      color: lightcoral

  #controls:hover
    opacity: 1


  #chat-messages
    z-index: 3
    position: absolute
    bottom: 70px
    left: 30px
    height: 200px
    width: 335px
    overflow: scroll
    font-size: 18px
    ul
      padding: 0px
      list-style: none
    li
      line-height: 18px

    .chat-message
      display: inline-block
      float: left


    .loopback
      float: right

    .bubble
      background: #333
      opacity: 0.6
      border-radius: 10px
      padding: 4px 10px
      margin-bottom: 2px
      max-width: 80%
      .username
        display: none

  #chat-input
    z-index: 3
    position: absolute
    bottom: 15px
    left: 30px
    opacity: 0.5

    input[type='text']
      //background: transparent
      //color: #111

    ::-webkit-input-placeholder
      color: #111

    ::-moz-placeholder
      color: #111

.clear
  clear: both

#navbar
  position: fixed
  top: 0px
  width: 100%
  z-index: 99

.navbar-inverse
  background: transparent
  border-color: transparent
  .navbar-text, .navbar-brand
    color: #FFF
  .navbar-collapse
    border-color: transparent
    box-shadow: none

.navbar
  .user-details
    font-size: 1.5em
    font-style: italic
    img
      width: 48px
      height: 48px
  .nav-icon
    width: 32px

@media (min-width: 992px)
  #homepage
  .logo
    margin-top: 50px
  .login
    margin-top: 20px
  .about
    margin-top: 50px

@media (min-width: 768px)
  .nav
    li
      a
        padding: 25px 15px


